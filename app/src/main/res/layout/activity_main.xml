<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_canvas"
        android:layout_width="350sp"
        android:layout_height="450sp"
        android:layout_marginTop="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="2sp"
        app:cardCornerRadius="5sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_design"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:elevation="2sp"
        app:layout_constraintStart_toStartOf="@+id/card_canvas"
        app:layout_constraintEnd_toEndOf="@+id/card_canvas"
        app:layout_constraintTop_toBottomOf="@+id/card_canvas">

        <!-- Add Text -->

        <LinearLayout
            android:id="@+id/ll_add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_addText"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/ic_add_text"
                android:contentDescription="Add Text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>


        <!-- Change font -->

        <LinearLayout
            android:id="@+id/ll_change_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="15sp">

            <ImageView
                android:id="@+id/img_change_font"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/ic_change_font"
                android:contentDescription="Change Font"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <!-- Font size -->

        <LinearLayout
            android:id="@+id/ll_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="15sp">

            <TextView
                android:id="@+id/txt_plus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginHorizontal="10sp"/>

            <TextView
                android:id="@+id/txt_minus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>

        </LinearLayout>

        <!-- Bold -->
        <ImageView
            android:id="@+id/img_bold"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginStart="15sp"
            android:src="@drawable/ic_b"/>

        <!-- Italics -->
        <ImageView
            android:id="@+id/img_italic"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginStart="5sp"
            android:src="@drawable/ic_i"/>

        <!-- Underline -->
        <ImageView
            android:id="@+id/img_underline"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginStart="5sp"
            android:src="@drawable/ic_u"/>

        <!-- Alignment -->
        <ImageView
            android:id="@+id/img_align"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginStart="5sp"
            android:src="@drawable/ic_center_align"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>